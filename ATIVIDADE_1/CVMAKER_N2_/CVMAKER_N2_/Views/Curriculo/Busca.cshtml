@model IdPesquisaViewModel

@{ Layout = "_Layout";}

<form name="formulário" asp-action="RetornaCurriculo">
    <label class="labelCustomizado">Digite o ID do currículo para pesquisar:</label>
    <br />
    <input type="number" name="Id" class="form-control" value="@Model.Id" />
    <span asp-validation-for="Id" class="text-danger"></span>
    <br />
    <br />
    <input type="submit" name="Pesquisar" class="btn-outline-info" value="Pesquisar" />
</form>